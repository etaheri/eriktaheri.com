---
interface Props {
  href: string;
  label?: string;
}

const { href, label = "Back" } = Astro.props;
---

<a
  href={href}
  class="inline-flex items-center gap-1.5 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors group"
>
  <span class="transition-transform group-hover:-translate-x-0.5">&larr;</span>
  {label}
</a>
